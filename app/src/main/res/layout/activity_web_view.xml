<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.WebViewActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:textAlignment="center">

        <Button
            android:id="@+id/BtnTourism"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="@string/turism" />

        <Button
            android:id="@+id/BtnPool"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="@string/pool" />

        <Button
            android:id="@+id/BtnSportCenter"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="@string/sportCenter"
            android:textSize="@dimen/nav_header_vertical_spacing" />

        <Button
            android:id="@+id/BtnMadridSport"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="@string/generallysports" />

    </LinearLayout>

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp" />

</LinearLayout>